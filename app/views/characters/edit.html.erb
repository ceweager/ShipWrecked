<div class="container mt-4">
	<%= simple_form_for([current_user, @character]) do |f| %>
		<%= f.input :name %>
		<%= f.input :age %>
		<%= f.input :gender %>
		<%= f.input :birthday %>
		<%= f.input :sexuality %>
		<%= f.input :overview %>
		<%= f.input :photo, as: :file %>
		<%= f.submit 'Submit', class: "form-button" %>
	<% end %>
</div>
