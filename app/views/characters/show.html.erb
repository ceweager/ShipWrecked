<div class="user-profile">
  <div class="left-user-profile">
    <div id="togglebox" style="display:inline-block; display:flex;">
      <h2 class="mr-3" style="display: inline-block;"> Dashboard | Biography</h2>
      <label class="switch">
        <input type="checkbox">
        <span class="slider round"></span>
      </label>
    </div>
    <div class="toggle-section">
      <div id="toggle_one">
        <%= render 'charactergoal' %>
      </div>
      <div id="toggle_two" class="inactive">
        <%= render 'characteroverview' %>
      </div>
    </div>
  </div>
  <div class="right-user-profile" style="width:22%;">
    <div class="user-profile-image">
      <%= cl_image_tag @character.photo.key, alt: "pic of #{@character.name}", height: 250, width: 250, gravity: :face, crop: :fill, class: "square-image" %>
      <p>Played by <%= link_to @character.user.username, user_path(@character.user) %></p>
      <% if @character.user == current_user %>
        <%= link_to '<i class="fas fa-pen-fancy"></i>'.html_safe, edit_user_character_path(current_user, @character), class: "edit-button"  %>
      <% end %>
    </div>
    <div class="user-details character-right">
      <h1><%= @character.name %></h1>
      <h5><%= @character.age %> - <%= @character.gender %> - <%= @character.birthday %> - <%= @character.sexuality %></h5>
      <p><%= @character.overview %></p>
    </div>
  </div>
</div>