<div class="card user-chat-card">
	<div class="left-profile-chat">
	  <h3><%= link_to chatroom.name, user_chatroom_path(current_user, chatroom) %></h3>
		<% if @user == chatroom.user %>
		  With <%= chatroom.partner.username %>
			<%= link_to 'Delete?', chatroom_path(chatroom), method: :delete, remote: true %>
		<% elsif @user == chatroom.partner %>
		  With <%= chatroom.user.username %>
		  <%= link_to 'Delete?', chatroom_path(chatroom), method: :delete, remote: true %>
		<% else %>
		  With <%= chatroom.partner.username %> and <%= chatroom.user.username %>
		<% end %>
	</div>
	<div class="right-profile-chat">
	  <% if chatroom.user == current_user && @user == current_user %>
	  	<%= cl_image_tag chatroom.partner.photo.key, class: "small-round-avatar"  %>
		<% else %>
		  <%= cl_image_tag chatroom.user.photo.key, class: "small-round-avatar"  %>
		<% end %>
	</div>
</div>