<!DOCTYPE html>
<html>
  <head>
    <title>RailsRpTracker</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload', defer: true %>
  </head>

  <body>
    <div class="flexbox">
      <div class="sidebar">
        <h3>SHIPWRECKED</h3>
        <%= render './shared/navbar' %>
        <ul>
          <li><%= link_to "Users",  users_path %></li>
          <% if user_signed_in? %>
            <li> <%= link_to  current_user.username, user_path(current_user) %></li>
            <li><%= link_to "Thread Tracker",  user_postthreads_path(current_user) %></li>
            <li><%= link_to "Characters", user_characters_path(current_user) %></li>
          <% end %>
        </ul>     
      </div>
      <div class="view">
        <%= yield %>
        <%= render 'shared/flashes' %>
      </div>     
    </div>
  </body>
</html>
